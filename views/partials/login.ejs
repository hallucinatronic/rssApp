<div id = "loginForm" ng-controller = "rightBar">
	<div ng-model = "destroyCotroller">
		<div ng-start-up = 'destroyController'>
			<h2 class="page-header">Login:</h2>
			<button  type="submit" style = "margin-top: 10px;" class = "button registerButton" id = "actionSelect" data-target="users/registerPage">[register]</button>

			<form id="submitForm" method="post" action="users/login">
			  <div class="">
			    <input maxlength="16" id = "username" type="text" class="rightField" name="username" placeholder="[username]" ng-model ="uname">
			  </div>
			  <div class="">
			    <input maxlength="32" id = "password" type="password" class="rightField" name="password" placeholder="[password]" ng-model ="pass" >
			  </div>
			  <button type="submit" class="button">[submit]</button>
			</form>
		</div>
	</div>
</div>